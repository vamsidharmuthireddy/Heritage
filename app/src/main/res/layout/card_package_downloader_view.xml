<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_sml_margin"
    android:layout_marginStart="@dimen/activity_sml_margin"
    android:layout_marginEnd="@dimen/activity_sml_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/activity_elevation"
    >


<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/heritage_site_title_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="6dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/heritage_site_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/activity_sml_margin"
            android:layout_marginEnd="@dimen/activity_sml_margin"
            android:theme="@style/BlackTextWhiteBackground"
            />

        <Switch
            android:id="@+id/download_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/heritage_site_info_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/activity_sml_margin"
            android:layout_marginEnd="@dimen/activity_sml_margin"
            android:theme="@style/BlackTextWhiteBackground"
            />

        <ImageButton
            android:id="@+id/heritage_info_reveal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_weight="6"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:elevation="6dp"
            android:focusable="false"
            android:foregroundGravity="center"
            android:src="@drawable/ic_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/heritage_site_info_short_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
<!--Don't make this view as gone! It will delay the animation-->
        <!--
                <include layout="@layout/card_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/heritage_site_info_short"
                    android:layout_margin="@dimen/activity_sml_margin"/>
                -->
        <TextView
            android:id="@+id/heritage_site_info_short"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:theme="@style/BlackTextWhiteBackground" />


    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
